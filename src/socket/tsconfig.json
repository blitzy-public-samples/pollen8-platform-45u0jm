{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "socket.io", "redis", "jest"],
    "paths": {
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@handlers/*": ["src/handlers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests", "dist"]
}