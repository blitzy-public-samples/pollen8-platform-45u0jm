{
  "watch": ["src"],
  "ext": ".ts,.js",
  "ignore": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "exec": "ts-node ./src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "restartable": "rs",
  "verbose": true,
  "colours": true,
  "delay": "1000",
  "signal": "SIGTERM",
  "events": {
    "restart": "echo 'Restarting Pollen8 API server...'"
  }
}